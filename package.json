{
  "name": "microsoft-todo-mcp-server",
  "version": "2.0.0",
  "description": "Microsoft To Do MCP server deployed on Azure Functions with GitHub webhook integration",
  "main": "dist/index.js",
  "dependencies": {
    "@azure/functions": "^4.5.0",
    "@azure/msal-node": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "dotenv": "^16.6.1",
    "zod": "^3.25.76"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup",
    "start": "func start",
    "dev": "pnpm run build && func start",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "lint": "pnpm run format:check",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run format:check && pnpm run typecheck",
    "check:fix": "pnpm run format && pnpm run typecheck",
    "ci": "pnpm run check && pnpm run build",
    "precommit": "pnpm run check:fix && pnpm run build",
    "prepublishOnly": "pnpm run ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ASISaga/microsoft-todo-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "azure-functions",
    "microsoft-todo",
    "webhooks",
    "github"
  ],
  "author": "ASISaga",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ASISaga/microsoft-todo-mcp-server/issues"
  },
  "homepage": "https://github.com/ASISaga/microsoft-todo-mcp-server#readme",
  "devDependencies": {
    "@types/node": "^22.19.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "files": [
    "dist",
    "host.json"
  ],
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40"
}
